<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="1.0"
    app:layout_scrollFlags="scroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="?android:attr/editTextPreferenceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_touchpad_sensity_preference" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            style="?android:attr/editTextPreferenceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.80"
            android:elegantTextHeight="true"
            android:singleLine="true"
            android:text="@string/slower"
            android:textAlignment="textStart" />

        <SeekBar
            android:id="@+id/sensitySeekBar"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:max="50"
            android:paddingTop="@dimen/buttons_layout_margin_bottom"
            android:progress="10" />

        <TextView
            android:id="@+id/textView2"
            style="?android:attr/editTextPreferenceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.80"
            android:phoneNumber="false"
            android:singleLine="true"
            android:text="@string/faster"
            android:textAlignment="textEnd" />

    </LinearLayout>

</LinearLayout>